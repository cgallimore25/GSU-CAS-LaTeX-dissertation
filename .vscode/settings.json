{
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.autoClean.run": "onSucceeded",
    "latex-workshop.intellisense.citation.backend": "biblatex",
    "latex-workshop.latex.clean.method": "glob", // Required for clean.filetypes to have effect
    "latex-workshop.latex.clean.fileTypes": [ 
        "*.aux",
        "*\\*.aux",   // specifying all subfolders
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.snm",
        "*.synctex(busy)",
        "*.synctex.gz(busy)",
        "*.nav",
        "*.vrb",
        "*.xdv" ],

    // "latex-workshop.latex.clean.subfolder.enabled": true,

    // for laptop work  -- NOTE: Inverse synctex with this configuration works much more smoothly
    "latex-workshop.synctex.synctexjs.enabled": true,
    "latex-workshop.view.pdf.viewer": "tab",

    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.view.pdf.zoom": "page-fit",

    "latex-workshop.latex.recipes": [
        {
            // "name": "pdflatex -> biber -> pdflatex*2",
            // "tools": [
            //     "pdflatex",
            //     "biber",
            //     "pdflatex",
            //     "pdflatex"
            // ]
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            // "name": "pdflatex",
            // "command": "pdflatex",
            // "args": [
            //     "-synctex=1",
            //     "-interaction=nonstopmode",
            //     "-file-line-error",
            //     "%DOC%"
            // ]
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",  // Puts auxiliary files for individual chapters in their respective directories
                "%DOC%"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        }
    ]

}